{
    "compilerOptions": {
        "composite": true,
        "allowJs": false,
        "checkJs": false,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2017",
            "dom"
        ],
        "noImplicitThis": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    }
}
